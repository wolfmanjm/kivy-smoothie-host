#: import Joystick kivy.garden.joystick.Joystick

<CircularButton>:
    canvas:
        Color:
            rgba: [0.75,0.75,0.75,1] if root.state == 'normal' else [0,1,1,1]
        Ellipse:
            pos: self.pos
            size: self.size
    Label:
        pos: root.pos
        size: root.size
        color: [1,0,0,1]
        text: root.text

<ArrowButton>:
    canvas:
        Color:
            rgba: [0.75,0.75,0.75, 1] if root.state == 'normal' else [0,1,1,1]
        PushMatrix
        Translate:
            x: self.pos[0]
            y: self.pos[1]
        Rotate:
            angle: root.angle
            origin: 25,25
        Mesh:
            mode: 'triangle_fan'
            vertices: 0,0,0,0, 0,25,0,0, 25,50,0,0, 50,25,0,0, 50,0,0,0
            indices: 0,1,2,3,4
        PopMatrix

    Label:
        size_hint: None, None
        pos: root.pos
        size: root.size
        color: 1,1,1,1
        text: root.text

<MyGridV@GridLayout>:
    size_hint: None, None
    size: 50, 150
    #spacing: 4
    rows: 3
    col_force_default: True
    col_default_width: 50
    row_force_default: True
    row_default_height: 50

<MyGridH@GridLayout>:
    size_hint: None, None
    size: 150, 50
    #spacing: 4
    cols: 3
    col_force_default: True
    col_default_width: 50
    row_force_default: True
    row_default_height: 50

<NumericInput>

<JogRoseWidget>:
    id: jogrose
    jogrosemain: jogrosemain
    abc_panel: abc_panel
    joystick: joystick

    padding: 5, 5
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        id: jogrosemain
        MyGridV:
            pos_hint: {'right': 1.0, 'top': 1.0}
            ArrowButton:
                size_hint: None, None
                size: 50, 50
                text: '{}+10'.format(root.abc_sel) if x10cb.active else '{}+1'.format(root.abc_sel)
                angle: 0
                on_press: root.handle_action(root.abc_sel, 1)
            Button:
                size_hint: None, None
                size: 50, 50
                text: '{}+1'.format(root.abc_sel) if x10cb.active else '{}+0.1'.format(root.abc_sel)
                on_press: root.handle_action(root.abc_sel, 0.1)

        MyGridV:
            pos_hint: {'right': 1.0, 'y': 0}
            size: 50, 100

            Button:
                size_hint: None, None
                size: 50, 50
                text: '{}-1'.format(root.abc_sel) if x10cb.active else '{}-0.1'.format(root.abc_sel)
                on_press: root.handle_action(root.abc_sel, -0.1)
            ArrowButton:
                size_hint: None, None
                size: 50, 50
                text: '{}-10'.format(root.abc_sel) if x10cb.active else '{}-1'.format(root.abc_sel)
                angle: 180
                on_press: root.handle_action(root.abc_sel, -1)

        MyGridV:
            pos_hint: {'center_x': 0.5, 'top': 1.0}
            ArrowButton:
                size_hint: None, None
                size: 50, 50
                text: 'Y+100' if x10cb.active else 'Y+10'
                angle: 0
                on_press: root.handle_action('Y', 10)
            Button:
                size_hint: None, None
                size: 50, 50
                text: 'Y+10' if x10cb.active else 'Y+1'
                on_press: root.handle_action('Y', 1)
            Button:
                size_hint: None, None
                size: 50, 50
                text: 'Y+1' if x10cb.active else 'Y+0.1'
                on_press: root.handle_action('Y', 0.1)

        MyGridV:
            pos_hint: {'center_x': 0.5, 'y': 0.0}

            Button:
                size_hint: None, None
                size: 50, 50
                text: 'Y-1' if x10cb.active else 'Y-0.1'
                on_press: root.handle_action('Y', -0.1)
            Button:
                size_hint: None, None
                size: 50, 50
                text: 'Y-10' if x10cb.active else 'Y-1'
                on_press: root.handle_action('Y', -1)
            ArrowButton:
                size_hint: None, None
                size: 50, 50
                text: 'Y-100' if x10cb.active else 'Y-10'
                angle: 180
                on_press: root.handle_action('Y', -10)

        MyGridH:
            pos_hint: {'x': 0.0, 'center_y': 0.5}

            ArrowButton:
                size_hint: None, None
                size: 50, 50
                text: 'X-100' if x10cb.active else 'X-10'
                angle: 90
                on_press: root.handle_action('X', -10)
            Button:
                size_hint: None, None
                size: 50, 50
                text: 'X-10' if x10cb.active else 'X-1'
                on_press: root.handle_action('X', -1)
            Button:
                size_hint: None, None
                size: 50, 50
                text: 'X-1' if x10cb.active else 'X-0.1'
                on_press: root.handle_action('X', -0.1)

        MyGridH:
            pos_hint: {'right': 1, 'center_y': 0.5}

            Button:
                size_hint: None, None
                size: 50, 50
                text: 'X+1' if x10cb.active else 'X+0.1'
                on_press: root.handle_action('X', 0.1)
            Button:
                size_hint: None, None
                size: 50, 50
                text: 'X+10' if x10cb.active else 'X+1'
                on_press: root.handle_action('X', 1)
            ArrowButton:
                size_hint: None, None
                size: 50, 50
                text: 'X+100' if x10cb.active else 'X+10'
                angle: -90
                on_press: root.handle_action('X', 10)

        Joystick:
            id: joystick
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: None, None
            size: 50, 50
            sticky: False
            outer_size: 1
            inner_size: 0.75
            pad_size:   0.5
            outer_line_width: 0.01
            inner_line_width: 0.01
            pad_line_width:   0.01
            outer_background_color: (0.75, 0.75, 0.75, 1)
            outer_line_color:       (0.25, 0.25, 0.25, 1)
            inner_background_color: (0.75, 0.75, 0.75, 1)
            inner_line_color:       (0.7,  0.7,  0.7,  1)
            pad_background_color:   (0.4,  0,  0,  1)
            pad_line_color:         (0.35, 0.35, 0.35, 1)

        CircularButton:
            pos_hint: {'center_x': 0.1, 'center_y': 0.25}
            size_hint: None, None
            size: 50, 50
            text: 'Origin'
            on_press: root.handle_action('O', 0)

        CircularButton:
            pos_hint: {'center_x': 0.1, 'center_y': 0.1}
            size_hint: None, None
            size: 50, 50
            text: 'Home'
            on_press: root.handle_action('H', 0)

        BoxLayout:
            id: abc_panel
            orientation: 'vertical'
            pos_hint: {'x': 0.75, 'y': 0.8}
            size_hint: 0.1, 0.2
            ToggleButton:
                text: 'Z'
                group: 'zabc_group'
                state: 'down'
                on_press: root.abc_sel= 'Z'
            ToggleButton:
                text: 'A'
                group: 'zabc_group'
                on_press: root.abc_sel= 'A'

        GridLayout:
            pos_hint: {'x': 0.0, 'top': 1}
            size_hint: 0.4, 0.5
            cols: 2
            spacing: 4,4
            CheckBox:
                id: x10cb
                size_hint: None, None
                size: 60, 40
            Label:
                text: "Jog x10"
                size_hint: None, None
                size: self.texture_size[0], 40
                #active: True
            NumericInput:
                id: xy_feedrate
                multiline: False
                size_hint_y: None
                height: self.minimum_height
                input_type: 'number'
                input_filter: 'float'
                text: root.xy_feedrate
                on_text_validate: root.update_xy_feedrate()
                use_bubble: False
                use_handles: False

            Label:
                text: 'Seek rate\r\nmm/min'
                size_hint: None, None
                size: self.texture_size[0], xy_feedrate.minimum_height

            Button:
                text: 'Motors Off'
                size_hint: None, None
                size: 80, 40
                on_press: root.motors_off()

