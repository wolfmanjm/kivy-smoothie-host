<NumericInput>
<DROTextInput@NumericInput>:
    multiline: False
    input_type: 'number'
    #input_filter: 'float'
    font_size: '18sp'
    font_name: "data/fonts/RobotoMono-Regular.ttf"
    use_bubble: False
    use_handles: False

<DROWidget>:
    id: dro
    on_curwcs: root._on_curwcs()

    GridLayout:
        pos_hint: {'top': 1}
        size_hint_y: 0.5
        cols: 4
        row_force_default: True
        row_default_height: 40
        padding: 4
        spacing: 1
        Label:
            text: '    '
            size_hint_x: None
            size: self.texture_size
        Label:
            text: 'X'
        Label:
            text: 'Y'
        Label:
            text: 'Z'

        Label:
            text: 'MPOS'
            size_hint_x: None
            size: self.texture_size
        DROTextInput:
            readonly: True
            is_focusable: False
            text: '{:+09.3f}'.format(app.mpos[0])
        DROTextInput:
            readonly: True
            is_focusable: False
            text: '{:+09.3f}'.format(app.mpos[1])
        DROTextInput:
            readonly: True
            is_focusable: False
            text: '{:+09.3f}'.format(app.mpos[2])

        Label:
            text: 'WPOS'
            size_hint_x: None
            size: self.texture_size
        DROTextInput:
            text: '{:+09.3f}'.format(app.wpos[0])
            on_text_validate: root.enter_wpos('x', self.text)
        DROTextInput:
            text: '{:+09.3f}'.format(app.wpos[1])
            on_text_validate: root.enter_wpos('y', self.text)
        DROTextInput:
            text: '{:+09.3f}'.format(app.wpos[2])
            on_text_validate: root.enter_wpos('z', self.text)

        Label:
            text: ''
            size_hint_x: None
            size: self.texture_size
        Button:
            text: 'X=0'
            on_press: root.enter_wpos('x', '0')
        Button:
            text: 'Y=0'
            on_press: root.enter_wpos('y', '0')
        Button:
            text: 'Z=0'
            on_press: root.enter_wpos('z', '0')

    BoxLayout:
        id: wcs_buts
        pos_hint: {'top': 0.5}
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        ToggleButton:
            text: 'G54'
            group: 'wcs_group'
            on_press: root.select_wcs(self.text)
        ToggleButton:
            text: 'G55'
            group: 'wcs_group'
            on_press: root.select_wcs(self.text)
        ToggleButton:
            text: 'G56'
            group: 'wcs_group'
            on_press: root.select_wcs(self.text)
        ToggleButton:
            text: 'G57'
            group: 'wcs_group'
            on_press: root.select_wcs(self.text)
        ToggleButton:
            text: 'G58'
            group: 'wcs_group'
            on_press: root.select_wcs(self.text)
        ToggleButton:
            text: 'G59'
            group: 'wcs_group'
            on_press: root.select_wcs(self.text)

    GridLayout:
        pos_hint: {'top': 0.4}
        size_hint_y: 0.2
        cols: 4
        row_force_default: True
        row_default_height: 35
        padding: 4
        spacing: 1

        Label:
            text: '    '
            size_hint_x: None
            size: self.texture_size
        Label:
            text: 'A'
        Label:
            text: 'B'
        Label:
            text: 'C'

        Label:
            text: 'MPOS'
            size_hint_x: None
            size: self.texture_size
        DROTextInput:
            readonly: True
            is_focusable: False
            text: '{:+09.3f}'.format(app.mpos[3]) if len(app.mpos) > 3 else "N/A"
        DROTextInput:
            readonly: True
            is_focusable: False
            text: '{:+09.3f}'.format(app.mpos[4]) if len(app.mpos) > 4 else "N/A"
        DROTextInput:
            readonly: True
            is_focusable: False
            text: '{:+09.3f}'.format(app.mpos[5]) if len(app.mpos) > 5 else "N/A"

        Label:
            text: ''
            size_hint_x: None
            size: self.texture_size
        Button:
            text: 'Reset'
            disabled: len(app.mpos) <= 3
            on_press: root.reset_axis('A')
        Button:
            text: 'Reset'
            disabled: len(app.mpos) <= 4
            on_press: root.reset_axis('B')
        Button:
            text: 'Reset'
            disabled: len(app.mpos) <= 5
            on_press: root.reset_axis('C')

    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {'y': 0.0}
        size_hint_y: None
        height: 40
        padding: 4
        spacing: 4

        Label:
            text: 'Fr: {:0.1f}/{:0.1f}'.format(app.fr, app.frr)
            size_hint: None, None
            size: self.texture_size

        Label:
            text: ' | Ovr: {:3.0f}%'.format(app.fro)
            size_hint: None, None
            size: self.texture_size

        Label:
            text: ' | S: {:1.2f}'.format(app.sr)
            size_hint: None, None
            size: self.texture_size

        # Hide these if they are not set
        Label:
            text: ' | Laser: {:3.1f}%'.format(app.lp)
            size_hint: None, None
            size: self.texture_size if app.lp > 0 else (0, 0)
            opacity: 1 if app.lp > 0 else 0

        Label:
            text: ' | {:4.1f} RPM'.format(app.rpm)
            size_hint: None, None
            size: self.texture_size if app.rpm > 0 else (0, 0)
            opacity: 1 if app.rpm > 0 else 0
