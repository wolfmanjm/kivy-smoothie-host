#: import DialGauge dial-gauge

<NumericInput>

<ExtruderWidget>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        Rectangle:
            pos: self.pos
            size: self.size

    hotend_dg: hotend_dg
    bed_dg: bed_dg
    hotend_switch: hotend_switch
    bed_switch: bed_switch

    BoxLayout:
        orientation: 'vertical'
        padding: 10, 5

        BoxLayout:
            padding: 10, 4
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                size: 40, extrude_length.minimum_height
                Label:
                    size_hint_y: None
                    size: self.texture_size[0], extrude_length.minimum_height
                    text: 'Length:'
                NumericInput:
                    id: extrude_length
                    multiline: False
                    size_hint_y: None
                    size: 40, self.minimum_height
                    input_type: 'number'
                    input_filter: 'float'
                    text: app.config.get('Extruder', 'length')
                    on_text_validate: root.update_length()
                Label:
                    size_hint_y: None
                    size_hint_x: None
                    size: self.texture_size[0], extrude_length.minimum_height
                    text: 'mm, Speed:'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                size: 40, extrude_speed.minimum_height
                NumericInput:
                    id: extrude_speed
                    multiline: False
                    size_hint_y: None
                    size: 40, self.minimum_height
                    input_type: 'number'
                    input_filter: 'float'
                    text: app.config.get('Extruder', 'speed')
                    on_text_validate: root.update_speed()
                Label:
                    size_hint_y: None
                    size: 40, extrude_speed.minimum_height
                    text: 'mm/min'
        BoxLayout:
            spacing: 10
            orientation: 'horizontal'
            Button:
                size_hint_y: None
                size: 40, 40
                text: 'Extrude'
                disabled: not app.is_connected
                on_press: root.extrude()
            Button:
                size_hint_y: None
                text: 'Reverse'
                disabled: not app.is_connected
                size: 40, 40
                on_press: root.reverse()

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 130
        # size_hint_x: None
        # width: 180 * 2

        BoxLayout:
            orientation: 'vertical'
            DialGauge:
                pos_hint: {'center_x': 0.5}
                id: hotend_dg
                dial_diameter: 180

                # gauge properties
                scale_max: 230
                scale_min: 20
                value: self.scale_min

                # example for half temperature gauge
                semi_circle: True
                scale_increment: 20
                angle_start: 90
                angle_stop: 270
                tic_frequency: 1
                tic_radius: self.dial_diameter/2.0
                needle_length: self.dial_diameter/2 - self.tic_length -4 # ends just where tics start less a few pixels
                needle_width: 5
                hub_radius: 10
                dial_color: 1,1,0,1
                hub_color: 1,0,0
                needle_color: 1,0,0

                show_value: True
                value_offset_pos: 0, self.dial_diameter/4 # offset from center of dial
                value_color: [0,1,0,1]

                # setup three annulars of different colors
                annulars: [{'color': [0,1,0,1], 'start': 20.0, 'stop': 60.0}, {'color': [1, 165.0/255, 0, 1], 'start': 60.0, 'stop': 80.0}, {'color': [1, 0, 0, 1], 'start': 80.0, 'stop': 230.0}]
                annular_thickness: 6

                setpoint_value: float('nan')
                setpoint_color: 0,0,0,1
                setpoint_length: self.dial_diameter/2
                setpoint_thickness: 1

            Label:
                text: 'Hotend'
                size_hint_y: None
                size: self.texture_size

        BoxLayout:
            orientation: 'vertical'
            DialGauge:
                pos_hint: {'center_x': 0.5}
                id: bed_dg
                dial_diameter: 180

                # gauge properties
                scale_max: 120
                scale_min: 20
                value: self.scale_min

                # example for half temperature gauge
                scale_increment: 10
                semi_circle: True
                angle_start: 90
                angle_stop: 270
                tic_frequency: 1
                tic_radius: self.dial_diameter/2.0
                needle_length: self.dial_diameter/2 - self.tic_length -4 # ends just where tics start less a few pixels
                needle_width: 5
                hub_radius: 10
                dial_color: 1,1,0,1
                hub_color: 1,0,0
                needle_color: 1,0,0

                show_value: True
                value_offset_pos: 0, self.dial_diameter/4 # offset from center of dial
                value_color: [0,1,0,1]

                # setup two annulars of different colors
                annulars: [{'color': [0,1,0,1], 'start': 20.0, 'stop': 60.0},  {'color': [1, 0, 0, 1], 'start': 60.0, 'stop': 120.0}]
                annular_thickness: 6

                setpoint_value: float('nan')
                setpoint_color: 0,0,0,1
                setpoint_length: self.dial_diameter/2
                setpoint_thickness: 1

            Label:
                text: 'Bed'
                size_hint_y: None
                size: self.texture_size

    GridLayout:
        cols: 5
        padding: 5, 5
        spacing: 5

        Label:
            size_hint_x: None
            width: self.texture_size[0]
            text: 'Hotend:'
        Switch:
            id: hotend_switch
            disabled: not app.is_connected
            on_active: root.switch_active(self, 'hotend', self.active, set_hotend_temp.text.split()[0])
        Spinner:
            id: set_hotend_temp
            text: 'select temp' if not root.last_hotend_temp else str(root.last_hotend_temp)
            values: ('185 (PLA)', '230 (abs)')

        Label:
            size_hint_x: None
            width: self.texture_size[0]
            text: '°C'
        Slider:
            min: -50
            max: 50
            value: 0
            on_value: root.adjust_temp('hotend', self.value)

        Label:
            size_hint_x: None
            width: self.texture_size[0]
            text: 'Bed:'
        Switch:
            id: bed_switch
            disabled: not app.is_connected
            on_active: root.switch_active(self, 'bed', self.active, set_bed_temp.text.split()[0])

        Spinner:
            id: set_bed_temp
            text: 'select temp' if not root.last_bed_temp else str(root.last_bed_temp)
            values: ('60 (PLA)', '110 (abs)')
        Label:
            size_hint_x: None
            width: self.texture_size[0]
            text: '°C'
        Slider:
            min: -50
            max: 50
            value: 0
            on_value: root.adjust_temp('bed', self.value)



    Widget:
        # uses up rest of space bit like a spring in other layouts

